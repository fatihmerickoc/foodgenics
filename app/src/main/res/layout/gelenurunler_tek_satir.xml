<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#595759">

    <ImageView
        android:id="@+id/gelen_urun_resim"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/gelen_urun_adi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:hint="Ürün adı:"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toEndOf="@+id/gelen_urun_resim"
        app:layout_constraintTop_toTopOf="@+id/gelen_urun_resim" />

    <ImageView
        android:id="@+id/gelen_urun_gonder_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/gelen_urun_resim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gelen_urun_resim"
        app:layout_constraintTop_toBottomOf="@+id/gelen_urun_adi"
        app:layout_constraintVertical_bias="0.64"
        app:srcCompat="@drawable/sendicon" />

    <ImageView
        android:id="@+id/gelen_urun_sil_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/gelen_urun_gonder_img"
        app:layout_constraintEnd_toStartOf="@+id/gelen_urun_gonder_img"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toEndOf="@+id/gelen_urun_resim"
        app:layout_constraintTop_toTopOf="@+id/gelen_urun_gonder_img"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/wrong" />

    <Spinner
        android:id="@+id/spinnerhalay"
        android:layout_width="148dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toEndOf="@+id/gelen_urun_resim"
        app:layout_constraintTop_toBottomOf="@+id/gelen_urun_adi"
        app:layout_constraintVertical_bias="0.35000002" />

</androidx.constraintlayout.widget.ConstraintLayout>